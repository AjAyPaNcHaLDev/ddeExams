<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/rectangle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle_shape" />


    <RelativeLayout
        android:id="@+id/icon_ek1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp">

        <View
            android:id="@+id/oval"
            android:layout_width="18.22dp"
            android:layout_height="18.22dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/oval_shape" />

        <ImageView
            android:id="@+id/path_ek3"
            android:layout_width="3.87dp"
            android:layout_height="3.87dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:contentDescription="path_ek3"
            android:src="@drawable/path_ek3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/search_ek1"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="14dp"
        android:fontFamily="Poppins"
        android:text="@string/search_ek1_string"
        android:textColor="@color/search_ek1_color"
        android:textSize="14sp" />

</RelativeLayout>
